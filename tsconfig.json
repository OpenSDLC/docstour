{
  "compilerOptions": {
    "outDir": "./public",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts"
  ]
}